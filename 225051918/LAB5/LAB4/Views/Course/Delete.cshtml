@model LAB4.Models.Course
@{
    ViewBag.Title = "Delete Course";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Course</h2>
<p>Are you sure you want to delete this?</p>

<table class="table">
    <tr><th>Number</th><td>@Model.CourseID</td></tr>
    <tr><th>Title</th><td>@Model.Title</td></tr>
    <tr><th>Credits</th><td>@Model.Credits</td></tr>
</table>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.CourseID)
    <button type="submit" class="btn btn-danger">Delete</button>
}
<p>@Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })</p>
