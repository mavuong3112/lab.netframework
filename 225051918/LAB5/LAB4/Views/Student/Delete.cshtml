@model LAB4.Models.Student
@{
    ViewBag.Title = "Delete Student";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Student</h2>

<p>Are you sure you want to delete this student?</p>

<table class="table">
    <tr><th>ID</th><td>@Model.ID</td></tr>
    <tr><th>Last Name</th><td>@Model.LastName</td></tr>
    <tr><th>First Name</th><td>@Model.FirstMidName</td></tr>
    <tr><th>Enrollment Date</th><td>@Model.EnrollmentDate.ToShortDateString()</td></tr>
</table>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.ID)
    <button type="submit" class="btn btn-danger">Delete</button>
    <p>@Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })</p>
}
