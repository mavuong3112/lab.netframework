@model LAB4.Models.Instructor
@{
    ViewBag.Title = "Delete Instructor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Instructor</h2>
<p>Are you sure you want to delete this instructor?</p>

<table class="table">
    <tr><th>ID</th><td>@Model.ID</td></tr>
    <tr><th>Last Name</th><td>@Model.LastName</td></tr>
    <tr><th>First/Middle Name</th><td>@Model.FirstMidName</td></tr>
    <tr><th>Hire Date</th><td>@Model.HireDate.ToShortDateString()</td></tr>
    <tr><th>Office</th><td>@Model.Office</td></tr>
</table>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.ID)
    <button type="submit" class="btn btn-danger">Delete</button>
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" })
}
