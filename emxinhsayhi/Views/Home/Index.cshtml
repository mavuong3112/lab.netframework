@* Views/Shared/_Layout.cshtml (tối giản) *@
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - MvcMusicStore</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.7.1.js"></script>
</head>
<body>
    <div id="header">
        <h1>@Html.ActionLink("Mvc Music Store", "Index", "Home")</h1>
        <ul>
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li>@Html.ActionLink("Store", "Index", "Store")</li>
        </ul>
        @Html.Action("CartSummary", "ShoppingCart")
    </div>
    <div id="body">
        @RenderBody()
    </div>
</body>
</html>