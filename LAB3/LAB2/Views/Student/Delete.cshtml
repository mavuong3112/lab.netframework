@model LAB2.Models.Student
@{
    ViewBag.Title = "Delete Student";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Confirmation</h2>

<p>Are you sure you want to delete this student?</p>

<table>
    <tr><th>ID</th><td>@Model.ID</td></tr>
    <tr><th>Last Name</th><td>@Model.LastName</td></tr>
    <tr><th>First Name</th><td>@Model.FirstMidName</td></tr>
    <tr><th>Enrollment Date</th><td>@Model.EnrollmentDate.ToShortDateString()</td></tr>
</table>

@using (Html.BeginForm("Delete", "Student", new { id = Model.ID }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <button type="submit">Delete</button>
    @Html.ActionLink("Cancel", "Index")
}



