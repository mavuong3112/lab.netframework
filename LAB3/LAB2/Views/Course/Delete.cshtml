@model LAB2.Models.Course
@{
    ViewBag.Title = "Delete Course";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Confirmation</h2>
<p>Are you sure you want to delete this course?</p>

<table class="table table-bordered">
    <tr><th>CourseID</th><td>@Model.CourseID</td></tr>
    <tr><th>Title</th><td>@Model.Title</td></tr>
    <tr><th>Credits</th><td>@Model.Credits</td></tr>
</table>

@using (Html.BeginForm("Delete", "Course", new { id = Model.CourseID }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <button type="submit">Delete</button>
    @Html.ActionLink("Cancel", "Index")
}
